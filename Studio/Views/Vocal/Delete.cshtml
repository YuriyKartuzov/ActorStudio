@model Studio.Controllers.VocalBase

@{
    ViewBag.Title = "Delete";
    var mainTitle = Model.Title;
    var shortDate = Model.LastModified.ToShortDateString();
}

<h2>Delete - @mainTitle  ?</h2>

<h3>This action cannot be undone!</h3>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt> @Html.DisplayNameFor(model => model.Title)</dt>
        <dd> @Html.DisplayFor(model => model.Title)</dd>

        <dt> @Html.DisplayNameFor(model => model.Descr) </dt>
        <dd> @Html.DisplayFor(model => model.Descr) </dd>

        <dt> @Html.DisplayNameFor(model => model.LastModified)</dt>
        <dd> @shortDate </dd>


    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-default" /> |
            @Html.ActionLink("Back to List", "Index")
        </div>
    }
</div>
